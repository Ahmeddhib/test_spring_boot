pipeline {
    agent any

    triggers {
        pollSCM('H/5 * * * *')  // Poll every 5 minutes
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                         branches: [[name: '*/main']],
                         extensions: [],
                         userRemoteConfigs: [[url: 'https://github.com/Ahmeddhib/StudentsManagement-DevOps.git']]])
            }
        }

        stage('Build') {
            steps {
                sh 'echo "Building your project..."'
                // Add your actual build commands
                // Examples:
                // sh 'mvn clean compile'  # For Maven
                // sh 'npm install'        # For Node.js
                // sh 'dotnet build'       # For .NET
            }
        }
    }
}
